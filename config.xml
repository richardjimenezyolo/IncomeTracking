<?xml version='1.0' encoding='utf-8'?>
<widget id="com.richard.IncomeTracking" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>IncomeTracking</name>
    <description>
        A simple app to track you income.
    </description>
    <author email="richardjimenez176@gmail.com" href="https://github.com/richardjimenezyolo/IncomeTracking">
        Richard Jimenez
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
